var align = {
    "n1" : "right",
    "l1" : "left",
    "f1" : "center",
    "t1" : "center"
}

var colors = {
    "t" : "#faf",
    "l" : "#ffa",
    "n" : "#aff",
    "f" : "#faa"
}

var slide = 0;

function impetus() {
  s = script[slide];
  picture = s[0];

  $('#vendetta').css("background-image", "url(/img/hm-nueva-temporada/" + s[0] + ".png)");
  $('#ventext').text(s[1]).css("color", colors[picture[0]]).css("text-align", align[picture]);
  slide = slide + 1;
}

$('#vendetta').click(impetus);
impetus();
