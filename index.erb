            <% if @photos %>
              <% @photos.each do |photo| %>
                <a href="<%= photo.path %>">
                  <img src="<%= photo.thumbnail %>" width="50" />
                </a>  
                <% end %>
            <% end %>
          </p>
        </div>
-->
      </div>
    
      <div class="row">
        <div class="span12">
          <pre id="fortunespre">
          </pre>
        </div>
      </div>
    </div>
    
      <%= partial("fortunes") %>
      <%= partial("footer") %>
    
  </body>
</html>

