<html>
  <head>
    <%= partial("head") %>  
  </head>
  <body>
    <div id="nav">
      <!--
      <a href="index.html">
        <img alt="" src="home.png" />
      </a>
      -->
      <% @sections.each do |category|
        id = category[:id]
        name = category[:name]
        color = category[:color]
      %>
        <div class="navitem" style="border-bottom: 3px solid <%= color %>">
          <%= name %>
        </div>          
      <% end %>
    </div>
      
    <%= partial("menu") %>  
      
    <div id="main">
      
      <% if @announce %>
        <div id="announce">
          <%= @announce %>
        </div>
      <% end %>
      
      <% section = section_for(@story)[:id] %>
      
      <div id="mainstory" class="story_<%= section %>">
        <div class="title">
          <%= @story[:title] %>
        </div>
        <div class="body">
          <%= @story[:body] %>
        </div>
      </div>  
      
      <% remaining_timeline = @timeline.select { |story| story[:id] != @story[:id] } %>
      
      <% if remaining_timeline.size > 0 %>
        <div class="more_in_section">
          <h1>
            Relacionadas:
          </h1>
          <ul>
          <% remaining_timeline.each do |story| %>
            <li class="menuitem_<%= section_name_for story %>">
            <a href="<%= story[:path] %>">
              <%= story[:title] %>
            </a>
            </li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
        
    <div id="fortunes">
<!--      Aquí van las fortunes -->
    </div>
    
    <div id="footer">
      Última actualización: <%= Time.now %>
    </div>
  </body>
</html>
