<% @sections.each do |section| %>
.menuitem_<%= section.identifier %> {
  padding-left: 5px;
}

.menuitem_<%= section.identifier %>:hover {
  padding-left: 2px;
  border-left: 3px solid <%= section.color %>;
}

.story_<%= section.identifier %> {
  border-bottom: 3px solid <%= section.color %>; 
}

.fill_<%= section.identifier %> {
  background: <%= section.color %>;
}

<% end %>
