<% @sections.each do |section| %>
.menuitem_<%= section[:id] %> {
  padding-left: 5px;
}

.menuitem_<%= section[:id] %>:hover {
  padding-left: 2px;
  border-left: 3px solid <%= section[:color] %>;
}

.story_<%= section[:id] %> {
  border-bottom: 3px solid <%= section[:color] %>; 
}

.transparent_<%= section[:id] %> {
  <% c = rgb(section[:color]) %>
  background-color: rgba(<%= c[:red] %>, <%= c[:green] %>, <%= c[:blue] %>, 0.1);
}
<% end %>